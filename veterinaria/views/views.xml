<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista tree de Veterinaria-->

    <record model="ir.ui.view" id="view_tree_veterinaria">
      <field name="name">view.tree.veterinaria</field>
      <field name="model">veterinaria.animal</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ref"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Vista form de Veterinaria-->
    <record id="view_veterinaria_form" model="ir.ui.view">
      <field name="name">view.form.veterinaria</field>
      <field name="model">veterinaria.animal</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" string="Nombre"/>
              <field name="ref" string="Referencia"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="action_view_veterinaria" model="ir.actions.act_window">
      <field name="name">Veterinaria</field>
      <!-- <field name="type">tr.actions.act_window</field> -->
      <field name="res_model">veterinaria.animal</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crea un nuevo animal en la veterinaria y haz click en el bot√≥n 
          <b>Nuevo</b>   
        </p>
      </field>
    </record>
    
    <menuitem name="menu_veterinaria" parent="" id="veterinaria.menu_root" action="veterinaria.action_view_veterinaria"/>
</odoo>