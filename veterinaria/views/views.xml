<odoo>
    <!-- Vista tree de Veterinaria-->

    <record model="ir.ui.view" id="view_veterinaria_tree">
      <field name="name">veterinaria.tree</field>
      <field name="model">veterinaria.animal</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ref"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Vista form de Veterinaria-->
    <record id="view_animal_form" model="ir.ui.view">
      <field name="name">animal.form</field>
      <field name="model">veterinaria.animal</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <h1>Hola mundo</h1>
              <field name="name" string="Nombre"/>
              <field name="ref" string="Referencia"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="veterinaria_action" model="ir.actions.act_window">
      <field name="name">Veterinaria_</field>
      <field name="type">tr.actions.act_window</field>
      <field name="res_model">veterinaria.animal</field>
      <field name="view_mode">tree.kanvan.form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crea un nuevo animal en la veterinaria y haz click en el bot√≥n 
          <b>Nuevo</b>   
        </p>
      </field>
    </record>
    
    <menuitem name="menu_veterinaria" id="veterinaria.menu_root" action="veterinaria.veterinaria_action"/>
</odoo>